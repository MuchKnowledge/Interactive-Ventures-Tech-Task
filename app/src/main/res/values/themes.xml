<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@drawable/background</item>

        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/accent_color</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="buttonStyle">@style/AppTheme.Buttons</item>
        <item name="textAppearanceButton">@style/AppTheme.TextAppearance.Button</item>
        <item name="android:textViewStyle">@style/AppTheme.TextAppearance.TextView</item>
    </style>

    <style name="AppTheme.Buttons" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accent_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/color_on_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>